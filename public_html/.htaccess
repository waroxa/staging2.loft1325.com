# ðŸ”’ Force HTTPS and keep staging hostname
<IfModule mod_rewrite.c>
RewriteEngine On

# Canonicalize www.staging2.loft1325.com -> staging2.loft1325.com
RewriteCond %{HTTP_HOST} ^www\.staging2\.loft1325\.com$ [NC]
RewriteRule ^ https://staging2.loft1325.com%{REQUEST_URI} [L,R=301]

# Force HTTPS without changing host for all other requests
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>



